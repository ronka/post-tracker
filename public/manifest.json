{
  "manifest_version": 3,
  "name": "Parcel Tracker",
  "version": "1.0.0",
  "description": "Track parcels by code. Add, edit, delete, and see status.",
  "action": {
    "default_title": "Parcel Tracker",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ]
}