{
  "manifest_version": 3,
  "name": "Parcel Tracker",
  "version": "1.0.0",
  "description": "Track parcels by code. Add, edit, delete, and see status.",
  "action": {
    "default_title": "Parcel Tracker",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms"
  ]
}